<Window x:Class="WSUSCommander.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSUSCommander.Windows"
        mc:Ignorable="d"
        Title="Progress" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Name="IterationTextBlock" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="10" 
                   FontSize="16"/>

        <ProgressBar Name="ProgressBar" 
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Center" 
                     Height="25" 
                     Margin="10"/>

        <Button Name="CancelButton" 
                Content="Cancel" 
                Width="100" 
                Height="30" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center" 
                Margin="10"
                Click="CancelButton_Click"/>
    </Grid>
</Window>
