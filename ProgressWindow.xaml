<Window x:Class="WSUSCommander.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSUSCommander"
        mc:Ignorable="d"
        Title="Progress" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Processing..." HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16"/>
        <ProgressBar x:Name="progressBar" Height="30" Minimum="0" Maximum="100" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250"/>
    </Grid>
</Window>
